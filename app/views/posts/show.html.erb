<% content_for :page_title, @post.title %>
 
<section class="section">
    <div class="container">
        <nav class="level">
             <%# left  %>
             <div class="level-left">
                <p class='level-item'> <strong>Actions</strong></p>
             </div>

             <%# right %>
             <div class="level-right">
                <p class='level-item'> <%= link_to "Edit", edit_post_path(@post), class: "button" %></p>
                <p class='level-item'> <a class="button is-danger">Delete</a></p>
             </div>
        </nav>
        <hr />

        <div class="content">
            <%= @post.content %>
        </div>
    </div>
</section>

<%# comments %>
<section class='comments'></section>